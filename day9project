import art

print(art.logo)
bidders = {}
keep_bid = True
max_bid=0
winner = ""
while keep_bid:
    name_of_the_bidder = input("what is your name\n")
    the_bid_of_the_user = int(input("what's your bid :$"))
    bidders[name_of_the_bidder] = the_bid_of_the_user
    continue_bid = input("do you want to continue type 'yes' or 'no'").lower()

    if continue_bid == 'yes':
        keep_bid=True


    elif continue_bid =='no':
        keep_bid=False

    print("\n"*20)

for key in bidders :
    if bidders[key] >= max_bid:
        bidders[key] = max_bid
    winner = key

print(max_bid)
print(winner)
