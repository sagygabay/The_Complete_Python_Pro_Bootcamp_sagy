import art


def add(n1, n2):
    return n1 + n2
def subtract(n1,n2):
    return n1 - n2
def multiply(n1,n2):
    return n1 * n2
def divide(n1,n2):
    return n1 / n2

calc={
    '+':add,
    '-':subtract,
    '*':multiply,
    '/':divide,
      }
print(art.logo)
clac_1 = True
num1 = float(input("enter the first number"))
while clac_1:

    for symbol in calc:
        print(symbol)

    operator = input("Type a mathematical operator a choice")
    num2 = float(input("enter the second number"))
    sum = calc[operator](num1, num2)
    print(sum)
    close_calc = input("do you want to keep going ? 'yes' or 'no' ")

    if close_calc == "no":
        clac_1 = False

    elif close_calc == "yes" :
        keep_calc = input("do you want to continue with the precious number 'yes' or 'no'")

        if keep_calc == "yes":
            num1 = sum

        elif keep_calc == "no":
            num1 = float(input("enter the first number"))

    else :
        keep_calc = input("do you want to continue with the precious number 'yes' or 'no'")
